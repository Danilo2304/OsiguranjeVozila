@model OsiguranjeVozila.Models.ViewModels.UserViewModel


@{
    ViewData["Title"] = "Zaposleni - Izmijeni";
}

<div class="bg-seconday bg-opacity-10 py-2">
    <div class="container">
        <h1>Izmjena podataka o zaposlenom</h1>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container py-5">
    @if (Model != null)
    {
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Id</label>
                <input type="text" class="form-control" id="id" asp-for="Id" readonly />

            </div>

            <div class="mb-3">
                <label class="form-label">Username</label>
                <input type="text" class="form-control" id="username" asp-for="Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" class="form-control" id="email" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" class="form-control" id="email" asp-for="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-dark">
                    Sačuvaj
                </button>
            </div>
        </form>
    }
    else
    {
        <p>Zaposleni nije pronadjen</p>
    }
</div>

