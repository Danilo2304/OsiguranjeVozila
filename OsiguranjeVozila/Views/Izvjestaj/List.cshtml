        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Broj prodaja po tipu polise</h1>
            </div>
            <div class="container">
                <table class="table">
                    <tbody>
                        @foreach (var polisa in Model.Polise)
                        {
