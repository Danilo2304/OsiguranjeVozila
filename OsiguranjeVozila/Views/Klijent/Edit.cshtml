@model OsiguranjeVozila.Models.ViewModels.EditKlijentViewModel

@{
    ViewData["Title"] = "Klijent - Izmijeni";
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Izmjena podataka o klijentu</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null)
    {
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Id</label>
                <input type="text" class="form-control" id="id" asp-for="Id" readonly />

            </div>
            <div class="mb-3">
                <label class="form-label">Ime</label>
                <input type="text" class="form-control" id="ime" asp-for="Ime" required/>
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>
            <div mb-3>
                <label class="form-label">Prezime</label>
                <input type="text" class="form-control" id="prezime" asp-for="Prezime" required />
                <span asp-validation-for="Prezime" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" class="form-control" id="email" asp-for="Email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Broj telefona</label>
                <input type="number" class="form-control" id="brojTelefona" asp-for="BrojTelefona" required />
                <span asp-validation-for="BrojTelefona" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Adresa</label>
                <input type="text" class="form-control" id="adresa" asp-for="Adresa" required />
                <span asp-validation-for="Adresa" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Datum rodjenja</label>
                <input type="date" class="form-control" id="datumRodjenja" asp-for="DatumRodjenja" required />
                <span asp-validation-for="DatumRodjenja" class="text-danger"></span>
            </div>
            <div mb-3>
                <button type="submit" class="btn btn-dark">
                    Sačuvaj
                </button>
                <button type="submit" class="btn btn-danger"
                   asp-area=""
                   asp-action="Delete"
                   asp-controller="Klijent"
                   >
                    Obriši
                </button>
            </div>
        </form>
    }
    else
    {
        <p>Klijent nije pronadjen</p>
    }
</div>
