@model List<OsiguranjeVozila.Models.Domain.Polise>


@{
    ViewData["Title"] = "Polise - Lista";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Lista polisa osiguranja - Funkcionalnost Administratora</h1>
    </div>
</div>

<div class="container py-5">
    <div class="text-end">
        <a class="btn btn-outline-success"
           asp-controller="AdminPolise"
           asp-action="Add">
            Nova polisa
        </a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Naziv</th>
                <th>Trajanje</th>
                <th>Nominalni iznos</th>
                <th>Uslovi osiguranja</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach(var polisa in Model)
            {
                <tr>
                    <td>@polisa.Id</td>
                    <td>@polisa.Naziv</td>
                    <td>@polisa.Trajanje</td>
                    <td>@polisa.NominalniIznos</td>
                    <td>
                        <div class="d-flex">
                            @foreach (var uslov in polisa.UsloviOsiguranja)
                            {
                                <span class="badge bg-secondary me-1">@uslov.Naziv</span>
                                
                            }
                        </div>
                        
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-area="" asp-action="Edit" asp-controller="AdminPolise" asp-route-id="@polisa.Id">
                            Izmijeni
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
