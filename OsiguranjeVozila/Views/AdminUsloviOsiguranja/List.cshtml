@model List<OsiguranjeVozila.Models.Domain.UslovOsiguranja>

@{
    ViewData["Title"] = "Uslovi osiguranja - Lista";
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Lista uslova kada kasko osiguranje ne važi - Funkcionalnost Administratora</h1>
    </div>
</div>


<div class="container py-5">
    <div class="text-end">
        <a class="btn btn-outline-success"
           asp-controller="AdminUsloviOsiguranja"
           asp-action="Add">
            Novi uslov
        </a>
    </div>
    @if(Model!=null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Naziv</th>
                    <th>Opis</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var uslov in Model)
                {
                    <tr>
                        <td>@uslov.Id</td>
                        <td>@uslov.Naziv</td>
                        <td>@uslov.Opis</td>
                        <td>
                            <a class="btn btn-primary" asp-area=""
                               asp-controller="AdminUsloviOsiguranja" 
                            asp-action="Edit" 
                            asp-route-id="@uslov.Id">Izmijeni</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Nema nijednog uslova osiguranja u bazi</p>
    }
</div>

