@model OsiguranjeVozila.Models.ViewModels.EditUslovOsiguranjaViewModel



@{
    ViewData["Title"] = "Uslovi osiguranja - Izmijeni";
}


<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Izmijeni uslov osiguranja</h1>
    </div>
</div>



<div class="container py-5">
    @if (Model != null)
    {
        <form method="post">
            <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" id="id" asp-for="Id" readonly/>
            
        </div>
        <div class="mb-3">
            <label class="form-label">Naziv</label>
            <input type="text" class="form-control" id="Naziv" asp-for="Naziv" />
            
        </div>
        <div class="mb-3">
            <label class="form-label">Opis</label>
            <input type="text" class="form-control" id="Opis" asp-for="Opis" />
            
        </div>


        <div class="mb-3">
            <button type="submit" class="btn btn-dark">
                Sačuvaj
            </button>
            <button type="submit" class="btn btn-danger ms-2"
                    asp-area="" asp-action="Delete" asp-controller="AdminUsloviOsiguranja">
                    Obriši
            </button>
        </div>

    </form>
    }
    else
    {
        <p>Nema podataka za zadati parametar</p>
    }
</div>